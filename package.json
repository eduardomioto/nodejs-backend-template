{
  "name": "nodejs-backend-template",
  "version": "1.0.0",
  "description": "Backend Template for NodeJS",
  "main": "app.js",
  "scripts": {
    "test": "jest --forceExit --no-cache --detectOpenHandles",
    "dev": "nodemon src/app.ts",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "generate-swagger": "swagger-jsdoc -c swagger.config.ts -o ./swagger.json",
    "build": "tsc -p .",
    "start": "NODE_PATH=./dist node dist/app.js",
    "release": "yarn build && yarn pack && mv *.tgz .docker/api_template && cd .docker/api_template && tar zxvf *.tgz && yarn docker",
    "docker": "docker build .docker/api_template -f .docker/api_template/Dockerfile -t eduardomioto/api_template",
    "coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@eslint/js": "^9.16.0",
    "@testing-library/react": "^16.0.1",
    "@types/express": "^4.17.1",
    "babel-jest": "^29.7.0",
    "eslint": "^9.16.0",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "react-test-renderer": "^18.3.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1",
    "@types/ioredis": "^4.28.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/yup": "^0.29.14",
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "husky": "^9.1.7",
    "ioredis": "^5.4.1",
    "ioredis-mock": "^8.9.0",
    "jest-mock": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "redis-mock": "^0.56.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "webpack": "^5.97.1",
    "winston": "^3.17.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
